#!/usr/bin/env bash
# Launch the NAI Workbench Textual TUI dashboard.
# Uses a venv for dependencies.
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
VENV_DIR="$SCRIPT_DIR/dashboard/.venv"

if [ ! -d "$VENV_DIR" ]; then
    echo "Creating virtual environment..."
    python3 -m venv "$VENV_DIR"
    "$VENV_DIR/bin/pip" install -q -r "$SCRIPT_DIR/dashboard/requirements.txt"
fi

exec "$VENV_DIR/bin/python" "$SCRIPT_DIR/dashboard/dashboard.py" "$@"
